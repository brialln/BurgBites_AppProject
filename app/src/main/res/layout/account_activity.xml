<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".AccountActivity"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-8dp">

            <TextView
                android:id="@+id/tvSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="167dp"
                android:layout_marginTop="45dp"
                android:text="Settings"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <SearchView
                android:id="@+id/svSearchBar"
                android:layout_width="362dp"
                android:layout_height="58dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/search_bar"
                android:queryHint="search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSettings">
            </SearchView>

            <TextView
                android:id="@+id/tvUpdateInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="7dp"
                android:text="Update your information"
                android:textColor="@color/dark_gray"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAccount" />

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="27dp"
                android:text="Account"
                android:textColor="@color/dark_blue"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/svSearchBar" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOrders"
                android:layout_width="362dp"
                android:layout_height="58dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/blue_white"
                android:text="Orders"
                android:textColor="@color/black"
                app:cornerRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnAccountInfo" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNotifications"
                android:layout_width="362dp"
                android:layout_height="58dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/blue_white"
                android:text="Notifications"
                android:textColor="@color/black"
                app:cornerRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnOrders" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccountInfo"
                android:layout_width="362dp"
                android:layout_height="58dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/blue_white"
                android:text="Account Information"
                android:textColor="@color/black"
                app:cornerRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUpdateInfo" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSecurity"
                android:layout_width="362dp"
                android:layout_height="58dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/blue_white"
                android:text="Security"
                android:textColor="@color/black"
                app:cornerRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCustomizePrivate" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLoginDetails"
                android:layout_width="362dp"
                android:layout_height="58dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/blue_white"
                android:text="Login details"
                android:textColor="@color/black"
                app:cornerRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnPayments" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPayments"
                android:layout_width="362dp"
                android:layout_height="58dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/blue_white"
                android:text="Payments + Billing"
                android:textColor="@color/black"
                app:cornerRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSecurity" />

            <TextView
                android:id="@+id/tvCustomizePrivate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="7dp"
                android:text="Customize your privacy to make better user experience"
                android:textColor="@color/dark_gray"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPrivacy" />

            <TextView
                android:id="@+id/tvPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:text="Privacy"
                android:textColor="@color/dark_blue"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnNotifications" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrivacy"
                android:layout_width="362dp"
                android:layout_height="58dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="6dp"
                android:backgroundTint="@color/blue_white"
                android:text="Privacy"
                android:textColor="@color/black"
                app:cornerRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnLoginDetails" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="362dp"
                android:layout_height="58dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="41dp"
                android:backgroundTint="@color/dark_blue"
                android:text="Logout"
                android:textColor="@color/blue_white"
                app:cornerRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnPrivacy" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/blue_white"
        android:elevation="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>
