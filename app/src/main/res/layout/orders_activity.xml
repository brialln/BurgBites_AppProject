<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrdersActivity">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvOrderThree"
                android:layout_width="362dp"
                android:layout_height="166dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/apricot"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvOrderOne">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="183dp"
                            android:layout_height="110dp"
                            android:src="@drawable/double_cheeseburger_transp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start">

                            <TextView
                                android:id="@+id/tvItemPriceTwo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="P59.50"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvItemNameTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Double Cheesebuger"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:paddingTop="18dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddtoCartTwo"
                            android:layout_width="120dp"
                            android:layout_height="45dp"
                            android:backgroundTint="@color/orange"
                            android:text="Add to Cart"
                            android:textSize="12dp"
                            app:cornerRadius="12dp" />



                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOrderOne"
        android:layout_width="362dp"
        android:layout_height="166dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/apricot"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="183dp"
                    android:layout_height="110dp"
                    android:src="@drawable/bacon_cheeseburger_transp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start">

                    <TextView
                        android:id="@+id/tvItemPriceOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P49.50"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvItemNameOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Bacon Cheesebuger"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:paddingTop="18dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddtoCartOne"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:backgroundTint="@color/orange"
                    android:text="Add to Cart"
                    android:textSize="12dp"
                    app:cornerRadius="12dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>





    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCheckout"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orange"
        android:text="Checkout"
        android:textSize="18dp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvOrderThree" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="407dp"
        android:layout_height="73dp"
        android:backgroundTint="@color/blue_white"
        android:elevation="15dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />

    <SearchView
        android:id="@+id/svSearchBar"
        android:layout_width="362dp"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/search_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="3dp"
        android:text="My Orders"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBurg" />


    <TextView
        android:id="@+id/tvBurg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/jomhuria_regular"
        android:text="BURG"
        android:textColor="@color/orange"
        android:textSize="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/svSearchBar" />

    <TextView
        android:id="@+id/tvBites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/jomhuria_regular"
        android:text="BITES"
        android:textColor="@color/dark_blue"
        android:textSize="38dp"
        app:layout_constraintStart_toEndOf="@+id/tvBurg"
        app:layout_constraintTop_toBottomOf="@+id/svSearchBar" />


</androidx.constraintlayout.widget.ConstraintLayout>